    </nav>

    <div class="hero">
      <h1><%= roomName %></h1>
    </div>
    <hr>
    <div class="chat-wrapper">
      <div id="message-container"></div>
    </div>
    <div class="compose">
      <form id="send-container">
        <input type="text" id="message-input" class="input is-rounded" autocomplete="off"
          placeholder="Type a message...">
        <button id="send-button" type="submit" class="button is-rounded is-primary"><img src="/assets/send-button.svg" alt=""></button>
      </form>
    </div>

  </div>
