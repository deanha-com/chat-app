  </script>
  <script defer src="http://localhost:3001/socket.io/socket.io.js"></script>
  <script defer src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script defer src="script.js"></script>
  <style>
    body {
      padding: 0;
      margin: 0;
      display: flex;
      justify-content: center;
    }

    #message-container {
      width: 100%;
      max-width: 800px;
      padding: 10px;
      margin: 0 auto;
      margin-bottom: 60px;
    }

    #message-container p {
      padding: 5px 15px;
      border-radius: 17px;
      width: fit-content;
      margin-bottom: 0.5em !important;
    }

    .incoming-msg {
      margin-right: auto;
      color: #fff;
      background-color: rgba(156, 39, 176, 0.70);
      border-top-left-radius: 6px !important;
    }

    .outgoing-msg {
      margin-left: auto;
      background-color: #f7f7f7;

      border-top-right-radius: 6px !important;
    }


    #send-container {
      /* position: fixed; */
      padding-bottom: 30px;
      bottom: 0;
      background-color: white;
      width: 100%;
      max-width: 800px;
      display: flex;
      margin: 0 auto;
      padding: 10px;
    }

    #message-container p.msg.joined {
      margin: auto;
      padding: 2px 8px;
      background-color: #01d1b2;
      color: #fff;
      font-size: x-small;
      border-radius: 17px !important;
    }

    #message-container p.msg.exited {
      margin: auto;
      padding: 2px 8px;
      background-color: #ff5c5c;
      color: #fff;
      font-size: x-small;
      border-radius: 17px !important;
    }

    #message-input {
      flex-grow: 1;
    }

    h1 {
      text-align: center;
      font-size: xx-large;
    }

    .compose {
      position: fixed;
      margin: 0 auto;
      width: 100%;
      left: 0;
      bottom: 0px;
      background: white;
    }

    #send-button {
      padding: 0px;
      margin: 0px;
      width: 40px;
      height: 40px;
    }

    #send-button img{
      height: 18px;
      width: 18px;
    }
  </style>
</head>

<body>

  
  
  
